                        </StackPanel>
                    </DataTemplate>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Border BorderThickness="1" CornerRadius="12" Background="{DynamicResource SetupWindow.Background}">
        <Grid >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Label HorizontalAlignment="Stretch" Grid.Column="0" Grid.Row="0" MouseDown="TitleBar_MouseDown"></Label>
            <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,8,0">
                <Button Style="{DynamicResource MinWindowButton}" Click="MinimizeApp" Grid.Column="1"/>
                <Button Style="{DynamicResource CloseWindowButton}" Click="CloseApp" Grid.Column="2"/>
            </StackPanel>
            <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="192"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="192"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>

                    <RowDefinition Height="137"/>
                    <RowDefinition Height="{Binding Path=IsDesingMode, Converter={StaticResource BoolToHeightConverter}}"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Column="1">
                    
                <Label Padding="0"  FontFamily="Segoe UI" FontSize="24" Grid.Column="1" Margin="8,40,8,10">Getting Started</Label>
                    <Button Style="{StaticResource BackButtonStyle}" VerticalAlignment="Top" Margin="6,0,0,0"  x:Name="BtnBackToMainScreen" Click="BtnBackToMainScreen_Click"  Content="Back to main screen"  HorizontalAlignment="Left" Visibility="{Binding BackButtonVisibilty}" />
                </StackPanel>
                <TabControl Margin="0" Padding="0" Grid.Row="2" Grid.Column="1" Background="Transparent" BorderBrush="Transparent"  SelectedIndex="{Binding Path=Flow, Mode=OneWay}" Height="auto" >
                    <TabControl.ItemContainerStyle>
                        <Style TargetType="{x:Type TabItem}">
                            <Setter Property="Visibility" Value="{Binding Path=IsDesingMode, Converter={StaticResource BoolToVisibleConverter}}"></Setter>

                        </Style>

                    </TabControl.ItemContainerStyle>
                    <TabItem Header="Start">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3.8*"/>

                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="{Binding Path=IsDesingMode, Converter={StaticResource BoolToHeightConverter}}"/>
                                <RowDefinition Height="84"/>
                                <RowDefinition Height="2.3*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Label FontSize="17" FontWeight="Bold" Margin="4,0,0,50" Grid.Row="1">Choose your path</Label>
                            <UniformGrid Columns="2" Rows="1" Grid.Row="2">
                                <Border Style="{DynamicResource BorderStyleBlueBox}" HorizontalAlignment="Stretch" Margin="8" VerticalAlignment="Stretch" >
                                    <StackPanel Margin="24">
                                        <Label FontFamily="Segoe UI Black" FontSize="14">I wish to Learn</Label>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="3*"/>
                                            </Grid.ColumnDefinitions>
                                            <ContentControl Content="{DynamicResource Whish_to_learn_icon}" Margin="2, 16"/>
                                            <StackPanel Grid.Column="1" Margin="28, 8,4,0">
                                                <TextBlock FontFamily="Segoe Ui" FontSize="13" Margin="8">Choose this option if you would like us to guide you through the process step by step and help you learn about safety.</TextBlock>
                                                <Button FontSize="18" VerticalAlignment="Bottom" Style="{DynamicResource GradientButtonStyle}" Margin="8,30,8,0" MinHeight="45" Content="I want to learn" Click="WantToLearn_Click"/>
                                            </StackPanel>
                                        </Grid>
                                        <StackPanel Orientation="Horizontal">


                                        </StackPanel>

                                    </StackPanel>
                                </Border>
                                <Border Style="{DynamicResource BorderStyleBlueBox}" HorizontalAlignment="Stretch" Margin="8" VerticalAlignment="Stretch">
                                    <StackPanel Margin="22">
                                        <Label FontFamily="Segoe UI Black" FontSize="14">I’m quite experienced</Label>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="132*"/>
                                                <RowDefinition Height="35*"/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="1.4*"/>
                                                <ColumnDefinition Width="3*"/>
                                            </Grid.ColumnDefinitions>
                                            <ContentControl Content="{DynamicResource i_am_expert_icon}" VerticalAlignment="Top" Margin="10,14,0,0"/>
                                            <StackPanel Grid.Column="1" Margin="12, 14,0,0" Grid.RowSpan="2">
                                                <TextBlock FontFamily="Segoe UI" FontSize="13" Margin="8" MinHeight="70">
                                                You should know what you are doing and you already have a crypto wallet.
                                                </TextBlock>
                                                <Button FontSize="18"  VerticalAlignment="Bottom" Style="{DynamicResource GradientButtonStyle}" Margin="8,25,8,0" MinHeight="45" Content="I'm an expert" Click="ExpertMode_Click"/>
                                            </StackPanel>
                                        </Grid>
                                    </StackPanel>
                                </Border>
                            </UniformGrid>
                        </Grid>
                    </TabItem>
                    <TabItem Header="WantToLearn">
                        <StackPanel>
                            <lui:NavBar Step="{Binding NoobStep, Mode=TwoWay}">
                                <lui:NavBar.Items>
                                    <lm:NavBarItem StepName="Prepare"/>
                                    <lm:NavBarItem StepName="Seed Phrase"/>
                                    <lm:NavBarItem StepName="Name" StepIndex="3"/>
                                    <lm:NavBarItem StepName="Benchmark"/>
                                </lui:NavBar.Items>
                            </lui:NavBar>
                            <Rectangle Width="20"  Height="{Binding Path=IsDesingMode, Converter={StaticResource BoolToHeightConverter}}" />
                            <TabControl Background="Transparent" BorderThickness="0" SelectedIndex="{Binding NoobStep}">
                                <TabControl.ItemContainerStyle>
                                    <Style TargetType="{x:Type TabItem}">
                                        <Setter Property="Visibility" Value="{Binding Path=IsDesingMode, Converter={StaticResource BoolToVisibleConverter}}"></Setter>
                                    </Style>
                                </TabControl.ItemContainerStyle>
                                <TabItem Header="Prepare">
                                    <Grid MinHeight="350">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1.2*" MinWidth="275"/>
                                            <ColumnDefinition Width="3*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="46"/>
                                        </Grid.RowDefinitions>
                                        <ContentControl Content="{DynamicResource Prepare_Step_icon}" Margin="6,20,0,0" Padding="0" VerticalAlignment="Top" HorizontalAlignment="Stretch"/>

                                        <StackPanel Margin="52,36,52,0" Grid.Column="1" HorizontalAlignment="Stretch">
                                            <TextBlock FontFamily="Segoe UI" FontSize="23" FontWeight="Bold" Margin="0, 0, 0 15">We will create a wallet for you</TextBlock>
                                            <TextBlock FontFamily="Segoe UI" FontSize="15">You will need either</TextBlock>
                                            <TextBlock FontFamily="Segoe UI" FontSize="21" FontWeight="Bold" Margin="0, 10">- pen and paper</TextBlock>
                                            <TextBlock FontFamily="Segoe UI" FontSize="21" FontWeight="Bold" Margin="0, 10">- an active printer</TextBlock>

                                        </StackPanel>
                                        <UniformGrid Grid.Column="1" Grid.Row="1" Rows="1" Columns="2" VerticalAlignment="Bottom" HorizontalAlignment="Stretch">
                                            <Button Content="Cancel" FontSize="18" Margin="0,0,2,0"  HorizontalAlignment="Stretch" Style="{DynamicResource CancelButtonStyle}" Click="OnCancelNoobFlow"/>
                                            <Button Content="Got It!" FontSize="18" Height="45" Margin="0,0,0,0" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Style="{DynamicResource GradientButtonStyle}" MinHeight="32" IsDefault="True" Click="OnWTLStep1" />
                                        </UniformGrid>
                                        <!--<StackPanel Orientation="Horizontal" Margin="2,35,0,0" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Grid.Row="0" Grid.Column="1" >
                                          
                                            </Button>
                                        </StackPanel>-->
                                    </Grid>
                                </TabItem>
                                <TabItem Header="Seed Phase">
                                    <Grid MinHeight="350">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" MinWidth="275"/>
                                            <ColumnDefinition Width="3*"/>

                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="44"/>
                                        </Grid.RowDefinitions>
                                        <ContentControl Content="{DynamicResource Seed_Step_icon}" Margin="6,20,0,0"  VerticalAlignment="top" HorizontalAlignment="Stretch"/>
                                        <StackPanel Width="440" Margin="76,20,0,0" Grid.Column="1" HorizontalAlignment="Left">
                                            <TextBlock FontFamily="Segoe UI" FontSize="24" FontWeight="Bold" Margin="0, 0, 0 15">Your wallet is being created…</TextBlock>
                                            <TextBlock FontFamily="Segoe UI" FontSize="15" Margin="0, 14, 0 15">In a moment you will be presented with 12 words.</TextBlock>
                                            <TextBlock FontFamily="Segoe UI" FontSize="15" Margin="0, 10" Width="440">
These 12 words are a backup for your wallet in case your disk fails or any other unexpected situations - you will be able to recreate your wallet with your earnings in any external wallet!</TextBlock>

                                        </StackPanel>
                                        <Button Height="44" Margin="72,0,0,0" Content="Got It!" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Style="{DynamicResource GradientButtonStyle}" MinHeight="32" IsDefault="True" Click="OnWTLStep2"
                                            Grid.Row="1" Grid.Column="1"/>

                                    </Grid>
                                </TabItem>
                                <TabItem Header="Seed Phase">
                                    <Grid MinHeight="350" >
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" MinWidth="275"/>
                                            <ColumnDefinition Width="3*"/>

                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="44"/>
                                        </Grid.RowDefinitions>
                                        <ContentControl Content="{DynamicResource Print_Step_icon}" Margin="6,20,0,10" VerticalAlignment="Top" HorizontalContentAlignment="Stretch"/>
                                        <StackPanel Width="500" Margin="70,23,79,0" Grid.Column="1">
                                            <TextBlock FontFamily="Segoe UI" FontSize="23" FontWeight="Bold" Margin="0, 0, 0, 0">Write down these words</TextBlock>
                                            <TextBlock FontFamily="Segoe UI" FontSize="14" FontWeight="Light" Margin="0, 0, 0, 20">(and keep them somewhere safe)</TextBlock>
                                            <ItemsControl ItemsSource="{Binding MnemonicWords}" AlternationCount="12">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Orientation="Horizontal" Margin="0,9,0,11">
                                                            <TextBlock Padding="0" Margin="0" FontSize="14" Text="{Binding Path=(ItemsControl.AlternationIndex), RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource CounterConverter}}"
                                                               Foreground="#fff"/>
                                                            <TextBlock Padding="0" Margin="0" FontSize="14" Text=". " Foreground="#fff"/>
                                                            <TextBlock Padding="0" Margin="0" FontSize="14" Text="{Binding .}" Foreground="White"/>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <UniformGrid Columns="3" Margin="0,10,72,0"/>
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                            </ItemsControl>

                                        </StackPanel>
                                        <Button x:Name="BtnSeedPhaseGotThemAll" Content="Got them all"  Height="44" VerticalAlignment="Bottom" Margin="70,0 ,0,0"  HorizontalAlignment="Stretch" Style="{DynamicResource GradientButtonStyle}" IsDefault="True" Click="OnWTLStep3Next"
                                            Grid.Row="1" Grid.Column="1"/>
                                        <Button Content="Print" Height="44" VerticalAlignment="Bottom" Margin="0,0,0,0" Style="{DynamicResource GradientButtonStyle}" MinHeight="32" IsDefault="True" Click="OnWTLStep3Print"
                                            Grid.Row="1" Grid.Column="0" />

                                    </Grid>
                                </TabItem>
                                <TabItem Header="Name">
                                    <Grid MinHeight="350">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" MinWidth="275"/>
                                            <ColumnDefinition Width="3*"/>

                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="44"/>
                                        </Grid.RowDefinitions>
                                        <ContentControl Content="{DynamicResource NodeName_Step_icon}" Margin="6,20,0,0" VerticalAlignment="Top" HorizontalAlignment="Stretch"/>
                                        <StackPanel  Margin="50,50,0,0" Grid.Column="1">

                                            <TextBlock FontFamily="Segoe UI" FontSize="22" FontWeight="Bold" Margin="20, 0, 0, 0">Name your node</TextBlock>
                                            <TextBlock FontFamily="Segoe UI" FontSize="12" FontWeight="Light" Margin="20, 0, 0, 0">Your computational resources will be visible to other users in the Golem Network under this name.
                                                You can always change it later in app settings. </TextBlock>
                                            <Border BorderThickness="0,0,0,2"   Margin="20, 40,20,0" Height="26">
                                                <TextBox Name="WantToLearnNodeName"  Style="{StaticResource TextBoxInError}" Validation.ErrorTemplate="{StaticResource ValidationTemplate}" ToolTip="Give your node a name" Margin="0, 0" BorderThickness="0" Background="Transparent" Foreground="#eee" CaretBrush="#fff" >
                                                    <TextBox.Text>
