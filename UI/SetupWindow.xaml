<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lm="clr-namespace:GolemUI.Model"
        xmlns:animated="clr-namespace:GolemUI.UI.AnimatedIcons" 
        xmlns:lui="clr-namespace:GolemUI.UI"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:local="clr-namespace:GolemUI.UI"
         x:Class="GolemUI.UI.SetupWindow"
        xmlns:lv="clr-namespace:GolemUI.DesignViewModel"             
        d:DataContext="{d:DesignInstance Type=lv:SetupViewModel, IsDesignTimeCreatable=True}"
        mc:Ignorable="d"
        WindowStyle="None"  
    ResizeMode="CanResizeWithGrip"
    Background="Transparent"
    AllowsTransparency="True"    
    MinHeight="720"
    MinWidth="1280"
        Title="SetupWindow" Height="720" Width="1280" Icon="/Media/icon2.ico" Loaded="Window_Loaded">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- icons begin -->
                <ResourceDictionary Source="/Ui/Icons/DefaultStyle/xaml/SetupWindow/SetupResources.xaml"/>
                <ResourceDictionary Source="/Ui/Icons/DefaultStyle/xaml/Wallet/WalletIcon.xaml"/>
                <ResourceDictionary Source="/Ui/Icons/Status_Card_error.xaml"/>
                <ResourceDictionary Source="/Ui/Icons/Status_Ready_icon.xaml"/>
                <!-- icons end -->
                <ResourceDictionary Source="/UI/Themes/Borders/SemiTransparentBorder.xaml"/>
                <ResourceDictionary Source="/UI/Themes/Defaults.xaml"/>
                <ResourceDictionary Source="/UI/Themes/Borders/BlueBorder.xaml"/>
                <ResourceDictionary Source="/UI/Themes/WindowControls.xaml"/>
                <ResourceDictionary Source="/UI/Themes/Buttons/GradientButton.xaml"/>
                <ResourceDictionary Source="/UI/Themes/Buttons/HyperLinkButton.xaml"/>
                <ResourceDictionary Source="/UI/Themes/Buttons/BackButton.xaml"/>
                <ResourceDictionary Source="/UI/Themes/Buttons/CancelButton.xaml"/>
                <ResourceDictionary Source="/UI/Themes/Borders/PageBackground.xaml"/>
                <ResourceDictionary Source="/UI/Themes/Labels/InfoLabel.xaml"/>
                <ResourceDictionary Source="/UI/Themes/ErrorMsg/BenchmarkErrorMsg.xaml"/>
                <ResourceDictionary Source="/UI/Themes/TextBox/TextBoxInError.xaml"/>
                <ResourceDictionary Source="/UI/Themes/Validation/ValidationTemplate.xaml"/>
                <ResourceDictionary>
                    <DataTemplate x:Key="DTGPU">
