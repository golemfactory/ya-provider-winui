<UserControl x:Class="BetaMiner.UI.Charts.PrettyChartDesign"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BetaMiner.UI.Charts"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             xmlns:dvm="clr-namespace:BetaMiner.DesignViewModel"
             d:DataContext ="{d:DesignInstance {x:Type local:PrettyChartDesignViewModel}, IsDesignTimeCreatable=True}"             
             >
    <Grid>
        <local:PrettyChart Width="500" Height="300" ChartData="{Binding Path=ChartData}"></local:PrettyChart>
            
    </Grid>
</UserControl>
