                                                                                </TransformGroup>
                                                                            </Canvas.RenderTransform>
                                                                            <Canvas>
                                                                                <Canvas.RenderTransform>
                                                                                    <TransformGroup>
                                                                                        <TranslateTransform X="0.000000" Y="119.000000" />
                                                                                    </TransformGroup>
                                                                                </Canvas.RenderTransform>
                                                                                <Canvas>
                                                                                    <Canvas.RenderTransform>
                                                                                        <TransformGroup>
                                                                                            <TranslateTransform X="84.000000" Y="60.000000" />
                                                                                        </TransformGroup>
                                                                                    </Canvas.RenderTransform>
