<Application x:Class="GolemUI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:GolemUI"
             xmlns:lc="clr-namespace:GolemUI.Converters"
             Startup="OnStartup" Exit="OnExit">
    <Application.Resources>
        <lc:AmountConverter x:Key="AmountConverter"/>
        <lc:BoolToVisibilityConverter x:Key="BoolToHiddenConverter" TrueValue="Collapsed" FalseValue="Visible"/>
        <lc:BoolToVisibilityConverter x:Key="BoolToVisibleConverter" TrueValue="Visible" FalseValue="Collapsed"/>
    </Application.Resources>
</Application>


